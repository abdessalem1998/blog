<div class="bg-light text-dark m-5">
  <div class="d-flex justify-content-center">
    <h2 class="mt-5">Add new Post</h2>
  </div>
  <div class="p-5">
    <%= form_with model: @post, url: user_posts_path do |form| %>
      <div class="form-group">
        <label>Title</label>
        <%= form.text_field :title, placeholder: 'Title', class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Your Post</label>
        <%= form.text_area :text, placeholder: 'Text', class: 'form-control' %>
      </div>
      <div class="d-flex justify-content-center">
        <%= form.submit "Publish", class: "btn btn btn-info w-25" %>
      </div>
    <% end %>
  </div>
</div>
