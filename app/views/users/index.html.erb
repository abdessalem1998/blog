<section class="">
  <div class="container mt-3">
    <% @users.each do |user| %>
      <%= link_to user_path(id: user.id) do %>
        <div class="row mb-4">
          <div class="col-sm-2">
            <img class="img-thumbnail rounded-circle" src="<%= user.photo %>" alt="User" />
          </div>
          <div class="col-sm border-5 rounded-pill bg-light text-dark">
            <h2 class="font-weight-bold display-2"><span class="text-decoration-line-through"><%= user.name %></span></h2>
            <span class="float-right">
              Number of posts:
              <%= user.posts_counter || 0 %>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
